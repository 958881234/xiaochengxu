.index-tab{display: flex;}
/* flex: 1; 后代中一个一半 */
.index-tab view{flex: 1;text-align: center;padding: 10rpx;margin: 10rpx;}
.index-tab view.active{border-bottom: 1px solid red;color: red;}

.index-list{
  display: flex;flex-wrap: wrap;
  margin-top: 20rpx;
}
.index-list-item{width: 50%;margin: 10rpx 0;}
.index-list-item image{width: 90%;height: 220rpx;margin: 0 auto;display: block;}
/* 让盒子中的2个左右对齐 */
.index-list-item .index-list-text{width: 90%;margin: 0 auto;display: flex;justify-content: space-between}

